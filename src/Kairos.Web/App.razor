@using Kairos.Shared.Layout
@using Kairos.Shared.Services
@using Microsoft.JSInterop
@inject ISettingsService SettingsService
@inject IJSRuntime JSRuntime
@implements IDisposable

<Router AppAssembly="@typeof(App).Assembly" AdditionalAssemblies="new[] { typeof(Kairos.Shared.Pages.Overview).Assembly }">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="@typeof(MainLayout)">
            <p role="alert">Sorry, there's nothing at this address.</p>
        </LayoutView>
    </NotFound>
</Router>

@code {
    private bool _isInitialized;

    protected override void OnInitialized()
    {
        SettingsService.OnSettingsChanged += OnSettingsChanged;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_isInitialized)
        {
            _isInitialized = true;
            await ApplyThemeAsync();
        }
    }

    private void OnSettingsChanged()
    {
        Console.WriteLine($"[App] Settings changed. Re-rendering. CurrentCulture: {System.Globalization.CultureInfo.CurrentCulture.Name}");
        _ = InvokeAsync(async () =>
        {
            await ApplyThemeAsync();
            StateHasChanged();
        });
    }

    private async Task ApplyThemeAsync()
    {
        await JSRuntime.InvokeVoidAsync("kairosTheme.applyTheme", SettingsService.Theme);
    }
    
    public void Dispose()
    {
        SettingsService.OnSettingsChanged -= OnSettingsChanged;
    }
}
