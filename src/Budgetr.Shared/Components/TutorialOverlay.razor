@using Budgetr.Shared.Services
@using Budgetr.Shared.Resources
@inject ITutorialService TutorialService
@inject IStringLocalizer<Strings> Localizer
@implements IDisposable

<div class="tutorial-overlay @(IsVisible ? "visible" : "hidden")">
    @if (IsVisible)
    {
        <div class="tutorial-container">
            <div class="avatar-container">
                <img src="@CurrentImage" alt="@Localizer["TutorialGuideName"]" class="avatar-image" />
            </div>
            
            <div class="dialogue-box">
                <div class="dialogue-content">
                    <h3 class="character-name">@Localizer["TutorialGuideName"]</h3>
                    <p class="dialogue-text">@CurrentText</p>
                </div>
                <div class="dialogue-actions">
                    <button class="btn-next" @onclick="NextStep">@Localizer["NextStep"] â–¶</button>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .tutorial-overlay {
        position: fixed;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none; /* Let clicks pass through unless on interactive elements */
        z-index: 9999;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
    }

    .tutorial-overlay.hidden {
        display: none;
    }

    .tutorial-container {
        display: flex;
        align-items: flex-end;
        width: 100%;
        max-width: 1200px; /* Or match main content width */
        margin: 0 auto;
        padding: 20px;
        pointer-events: auto; /* Re-enable clicks for the dialog */
        gap: 20px;
    }

    .avatar-container {
        flex-shrink: 0;
        margin-bottom: -10px; /* Slight overlap with bottom */
        z-index: 10;
        animation: slideInLeft 0.5s ease-out;
    }

    .avatar-image {
        height: 350px; /* Adjust based on image quality */
        width: auto;
        filter: drop-shadow(0 0 10px rgba(0,0,0,0.5));
    }

    .dialogue-box {
        flex-grow: 1;
        background: rgba(0, 0, 0, 0.85);
        border: 2px solid #fff;
        border-radius: 10px;
        padding: 20px;
        color: white;
        box-shadow: 0 4px 15px rgba(0,0,0,0.5);
        margin-bottom: 20px;
        animation: fadeIn 0.5s ease-out;
        position: relative;
        min-height: 150px;
        display: flex;
        flex-direction: column;
    }

    .character-name {
        margin: 0 0 10px 0;
        color: #4edcd8; /* Budgetr brand color or similar */
        font-family: sans-serif;
        text-transform: uppercase;
        font-size: 1.1rem;
        letter-spacing: 1px;
    }

    .dialogue-text {
        font-size: 1.1rem;
        line-height: 1.5;
        margin: 0;
        white-space: pre-wrap;
    }

    .dialogue-actions {
        margin-top: auto;
        text-align: right;
    }

    .btn-next {
        background: transparent;
        border: 1px solid #4edcd8;
        color: #4edcd8;
        padding: 5px 15px;
        border-radius: 5px;
        cursor: pointer;
        font-weight: bold;
        transition: all 0.2s;
    }

    .btn-next:hover {
        background: #4edcd8;
        color: #000;
    }

    @@keyframes slideInLeft {
        from { transform: translateX(-50px); opacity: 0; }
        to { transform: translateX(0); opacity: 1; }
    }

    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }
    
    @@media (max-width: 768px) {
        .tutorial-container {
            flex-direction: column;
            align-items: center;
        }
        
        .avatar-image {
            height: 200px;
        }
        
        .dialogue-box {
            width: 100%;
        }
    }
</style>

@code {
    private bool IsVisible => TutorialService.IsActive;
    private string CurrentText => TutorialService.CurrentStep?.Message ?? "";
    private string CurrentImage => TutorialService.CurrentStep?.ImageUrl ?? "img/tutorial-avatar.png";
    
    protected override async Task OnInitializedAsync()
    {
        TutorialService.OnChange += StateHasChanged;
        // Initialization is global or typically done once, but ensuring checks here is fine.
        // We'll trust MainLayout or Program to init the service, or do it here.
        // Let's call InitializeAsync here to be safe as it's the UI entry point.
        await TutorialService.InitializeAsync();
    }

    private void NextStep()
    {
        TutorialService.NextStep();
    }

    public void Dispose()
    {
        TutorialService.OnChange -= StateHasChanged;
    }
}
