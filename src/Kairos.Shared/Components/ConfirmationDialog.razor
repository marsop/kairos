@using Kairos.Shared.Resources
@inject IStringLocalizer<Strings> Localizer

@if (IsVisible)
{
    <div class="modal-backdrop">
        <div class="modal-content">
            <h3 class="modal-title">@Title</h3>
            <p class="modal-message">@Message</p>
            
            <div class="modal-actions">
                <button class="btn btn-secondary" @onclick="OnCancel">@Localizer["Cancel"]</button>
                <button class="btn btn-danger" @onclick="OnConfirm">@Localizer["Confirm"]</button>
            </div>
        </div>
    </div>
}

<style>
    .modal-backdrop {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(15, 31, 30, 0.24);
        backdrop-filter: blur(2px);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 10000;
    }

    .modal-content {
        background: var(--color-bg-secondary, #ffffff);
        padding: 20px;
        border-radius: 12px;
        width: 90%;
        max-width: 400px;
        box-shadow: 0 16px 36px rgba(15, 31, 30, 0.14);
        border: 1px solid var(--color-bg-tertiary, #e6ebe8);
        color: var(--color-text-primary, #0f1f1e);
    }

    .modal-title {
        margin-top: 0;
        color: var(--color-negative, #bb3e3e);
    }

    .modal-message {
        margin: 15px 0 25px;
        line-height: 1.5;
    }

    .modal-actions {
        display: flex;
        justify-content: flex-end;
        gap: 10px;
    }

    .btn {
        padding: 8px 16px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-weight: 600;
    }

    .btn-secondary {
        background: var(--color-bg-tertiary, #e6ebe8);
        color: var(--color-text-primary, #0f1f1e);
    }

    .btn-danger {
        background: var(--color-negative, #bb3e3e);
        color: white;
    }
</style>

@code {
    [Parameter] public string Title { get; set; } = "Confirm Action";
    [Parameter] public string Message { get; set; } = "Are you sure you want to proceed?";
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public EventCallback<bool> OnClose { get; set; }

    private async Task OnCancel()
    {
        await OnClose.InvokeAsync(false);
    }

    private async Task OnConfirm()
    {
        await OnClose.InvokeAsync(true);
    }
}
