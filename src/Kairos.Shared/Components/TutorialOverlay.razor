@using Kairos.Shared.Services
@using Kairos.Shared.Resources
@inject ITutorialService TutorialService
@inject ISettingsService SettingsService
@inject IStringLocalizer<Strings> Localizer
@implements IDisposable

<div class="tutorial-overlay @(IsVisible ? "visible" : "hidden")">
    @if (IsVisible)
    {
        <div class="tutorial-container">
            <div class="avatar-container">
                <img src="@CurrentImage" alt="@Localizer["TutorialGuideName"]" class="avatar-image" />
            </div>
            
            <div class="dialogue-box">
                <div class="dialogue-content">
                    <h3 class="character-name">@Localizer["TutorialGuideName"]</h3>
                    <p class="dialogue-text">@CurrentText</p>
                    @if (TutorialService.IsInitialSetupStep)
                    {
                        <div class="setup-options">
                            <div class="setup-item">
                                <span class="setup-label">@Localizer["DisplayLanguage"]</span>
                                <div class="language-dropdown">
                                    <button type="button" class="dropdown-trigger" @onclick="ToggleLanguageDropdown">
                                        <span>@GetLanguageName(SettingsService.Language)</span>
                                    </button>
                                    <div class="dropdown-menu @(isLanguageDropdownOpen ? "show" : "")">
                                        @foreach (var language in Languages)
                                        {
                                            <div class="dropdown-item @(SettingsService.Language == language.Code ? "selected" : "")"
                                                 @onclick="() => SelectLanguage(language.Code)"
                                                 @onclick:stopPropagation="true">
                                                <span>@language.Name</span>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="setup-item">
                                <span class="setup-label">@Localizer["TutorialAvatar"]</span>
                                <div class="language-dropdown">
                                    <button type="button" class="dropdown-trigger" @onclick="ToggleAvatarDropdown">
                                        <span>@(TutorialService.CurrentAvatar?.Name ?? "Unknown")</span>
                                    </button>
                                    <div class="dropdown-menu @(isAvatarDropdownOpen ? "show" : "")">
                                        @foreach (var avatar in TutorialService.AvailableAvatars)
                                        {
                                            <div class="dropdown-item @(TutorialService.CurrentAvatar.Id == avatar.Id ? "selected" : "")"
                                                 @onclick="() => SelectAvatar(avatar.Id)"
                                                 @onclick:stopPropagation="true">
                                                <span>@avatar.Name</span>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="dialogue-actions">
                    <button class="btn-next" @onclick="NextStep" disabled="@(!TutorialService.CanAdvanceFromCurrentStep)">@Localizer["NextStep"] ▶</button>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .tutorial-overlay {
        position: fixed;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none; /* Let clicks pass through unless on interactive elements */
        z-index: 9999;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
    }

    .tutorial-overlay.hidden {
        display: none;
    }

    .tutorial-container {
        display: flex;
        align-items: flex-end;
        width: 100%;
        max-width: 1200px; /* Or match main content width */
        margin: 0 auto;
        padding: 20px;
        pointer-events: auto; /* Re-enable clicks for the dialog */
        gap: 20px;
    }

    .avatar-container {
        flex-shrink: 0;
        margin-bottom: -10px; /* Slight overlap with bottom */
        z-index: 10;
        animation: slideInLeft 0.5s ease-out;
    }

    .avatar-image {
        height: 350px; /* Adjust based on image quality */
        width: auto;
        filter: drop-shadow(0 8px 18px rgba(15, 31, 30, 0.28));
    }

    .dialogue-box {
        flex-grow: 1;
        background: var(--color-bg-secondary, #ffffff);
        border: 1px solid var(--color-bg-tertiary, #e6ebe8);
        border-radius: 10px;
        padding: 20px;
        color: var(--color-text-primary, #0f1f1e);
        box-shadow: 0 12px 30px rgba(15, 31, 30, 0.14);
        margin-bottom: 20px;
        animation: fadeIn 0.5s ease-out;
        position: relative;
        min-height: 150px;
        display: flex;
        flex-direction: column;
    }

    .character-name {
        margin: 0 0 10px 0;
        color: var(--color-accent, #0f766e);
        font-family: var(--font-family, 'Manrope', sans-serif);
        text-transform: uppercase;
        font-size: 1.1rem;
        letter-spacing: 1px;
    }

    .dialogue-text {
        font-size: 1.1rem;
        line-height: 1.5;
        margin: 0;
        white-space: pre-wrap;
    }

    .dialogue-actions {
        margin-top: auto;
        text-align: right;
    }

    .setup-options {
        display: grid;
        gap: 12px;
        margin-top: 16px;
    }

    .setup-item {
        display: flex;
        flex-direction: column;
        gap: 6px;
    }

    .setup-label {
        font-size: 0.95rem;
        font-weight: 600;
        color: var(--color-text-secondary, #4b635f);
    }

    .btn-next {
        background: transparent;
        border: 1px solid var(--color-accent, #0f766e);
        color: var(--color-accent, #0f766e);
        padding: 5px 15px;
        border-radius: 5px;
        cursor: pointer;
        font-weight: bold;
        transition: all 0.2s;
    }

    .btn-next:hover {
        background: var(--color-accent, #0f766e);
        color: #ffffff;
    }

    .btn-next:disabled {
        opacity: 0.5;
        cursor: not-allowed;
        background: transparent;
        color: var(--color-accent, #0f766e);
    }

    @@keyframes slideInLeft {
        from { transform: translateX(-50px); opacity: 0; }
        to { transform: translateX(0); opacity: 1; }
    }

    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }
    
    @@media (max-width: 768px) {
        .tutorial-container {
            flex-direction: column;
            align-items: center;
        }
        
        .avatar-image {
            height: 200px;
        }
        
        .dialogue-box {
            width: 100%;
        }
    }
</style>

@code {
    private bool isLanguageDropdownOpen;
    private bool isAvatarDropdownOpen;

    private record LanguageOption(string Name, string Code);
    private readonly List<LanguageOption> Languages = new()
    {
        new("English", "en"),
        new("Deutsch", "de"),
        new("Español", "es"),
        new("Galego", "gl"),
        new("Vorarlbergerisch", "gsw")
    };

    private bool IsVisible => TutorialService.IsActive;
    private string CurrentText => TutorialService.CurrentStep?.Message ?? "";
    private string CurrentImage => TutorialService.CurrentStep?.ImageUrl ?? "img/tutorial-avatar.png";
    private string GetLanguageName(string code) => Languages.FirstOrDefault(l => l.Code == code)?.Name ?? "English";
    
    protected override async Task OnInitializedAsync()
    {
        TutorialService.OnChange += StateHasChanged;
        // Initialization is global or typically done once, but ensuring checks here is fine.
        // We'll trust MainLayout or Program to init the service, or do it here.
        // Let's call InitializeAsync here to be safe as it's the UI entry point.
        await TutorialService.InitializeAsync();
    }

    private void NextStep()
    {
        TutorialService.NextStep();
    }

    private void ToggleLanguageDropdown() => isLanguageDropdownOpen = !isLanguageDropdownOpen;
    private void ToggleAvatarDropdown() => isAvatarDropdownOpen = !isAvatarDropdownOpen;

    private async Task SelectLanguage(string code)
    {
        TutorialService.MarkInitialSetupLanguageSelected();

        if (SettingsService.Language != code)
        {
            await SettingsService.SetLanguageAsync(code);
        }

        isLanguageDropdownOpen = false;
        StateHasChanged();
    }

    private async Task SelectAvatar(string avatarId)
    {
        TutorialService.MarkInitialSetupAvatarSelected();

        if (TutorialService.CurrentAvatar.Id != avatarId)
        {
            await TutorialService.SetAvatarAsync(avatarId);
        }

        isAvatarDropdownOpen = false;
        StateHasChanged();
    }

    public void Dispose()
    {
        TutorialService.OnChange -= StateHasChanged;
    }
}
